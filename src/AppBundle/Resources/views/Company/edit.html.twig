{% extends 'AppBundle::base-layout.html.twig' %}

{% block page_title %}Companies{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">

            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Company edit</h3>
                </div>

                {{ form_start(edit_form) }}
                <div class="box-body">
                    {{ form_widget(edit_form) }}
                </div>
                <div class="box-footer clearfix">
                    <div class="pull-left box-tools">
                        <a class="btn btn-info btn-sm" href="{{ path('company_index') }}"><i class="fa fa-list"></i>
                            {{ 'actions.list'|trans }}</a>
                        <button type="reset" class="btn btn-warning btn-sm"><i
                                    class="fa fa-times"></i>{{ 'actions.cancel'|trans }}</button>
                        <button type="submit" class="btn btn-primary btn-sm"><i
                                    class="fa fa-check-square"></i>{{ 'actions.save'|trans }}
                        </button>
                    </div>
                </div>
                {{ form_end(edit_form) }}

            </div>

        </div>
    </div>
{% endblock %}
