{% extends 'AppBundle::base-layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-md-12">

            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">{% block form_box_title %}New record creation{% endblock %}</h3>
                </div>

                {{ form_start(form) }}
                <div class="box-body">
                    {{ form_widget(form) }}
                </div>
                <div class="box-footer clearfix">
                    <div class="pull-left box-tools">
                        <a class="btn btn-info btn-sm"
                           href="{% block list_form_route %}{{ path('dashboard') }}{% endblock %}"><i
                                    class="fa fa-list"></i>
                            {{ 'actions.list'|trans }}</a>
                        <button type="reset" class="btn btn-warning btn-sm"><i
                                    class="fa fa-times"></i>{{ 'actions.cancel'|trans }}</button>
                        <button type="submit" class="btn btn-primary btn-sm"><i
                                    class="fa fa-check-square"></i>{{ 'actions.save'|trans }}
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}

            </div>

        </div>
    </div>


{% endblock %}
