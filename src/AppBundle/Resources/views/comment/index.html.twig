{% extends 'AppBundle::base-layout.html.twig' %}

{% block page_title %} Comments {% endblock %}

{% block page_content %}

<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-header">
                <h3 class="box-title">List</h3>
            </div>

    <table  class="table table-bordered table-striped table-hover" id="companiesDataTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td><a href="{{ path('comment_show', { 'id': comment.id }) }}">{{ comment.id }}</a></td>
                <td>{{ comment.comment }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('comment_show', { 'id': comment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('comment_edit', { 'id': comment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('comment_new') }}">Create a new entry</a>
        </li>
    </ul>
            {# display navigation #}
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
                            Showing {{ pageStartRecord }}
                            to {{ pageEndRecord }}
                            of
                            {{ comments.getTotalItemCount }} entries
                        </div>
                    </div>

                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers">
                            {{ knp_pagination_render(comments) }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>
    <!-- /.row -->

{% endblock %}
